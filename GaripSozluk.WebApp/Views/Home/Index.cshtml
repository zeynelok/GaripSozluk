@model PostRowVM
@{
    ViewData["Title"] = "Home Page";
}

<div class="col-12">
    @if (Model != null)
    {
        @*row border m-4 p-2*@
        <div class="row border m-4 p-2 col-12">
            <div class="col-9">
                <ul><li class="list-group"> <h3> <a>@Model.Title.ToString()</a>  </h3></li></ul>
                <ul><li> <p>Görüntülenme Sayısı: @Model.ViewCount</p></li>  </ul>
                <ul><li class="list-group"> <p>Yayınlanma tarihi: @Model.CreateDate</p></li>  </ul>
            </div>

            <div class="col-3">
                <ul></ul>
                <ul>
                    <a asp-action="AddComment" asp-controller="Comment" asp-route-selectedCategoryId="@ViewBag.PostCategoryName.Id" asp-route-postId="@Model.postId">Yorum Ekle</a>
                </ul>

            </div>

        </div>

        <div class="row col-12">
            <div class="col-6"></div>
            <div class="col-6">
                <nav aria-label="Page navigation ">
                    <ul class="pagination">
                        <li class="page-item">
                            <a class="page-link" asp-route-selectedCategoryId="@ViewBag.PostCategoryName.Id" asp-route-postId="@Model.postId" asp-route-currentPage="@Model.PreviousPage">Önceki</a>
                        </li>
                        @for (int i = 1; i <= Model.PageCount; i++)
                        {
                            if (i == Model.CurrentPage)
                            {
                                <li class="page-item active">
                                    <label class="page-link">@i</label>
                                </li>
                            }
                            else
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-route-selectedCategoryId="@ViewBag.PostCategoryName.Id" asp-route-postId="@Model.postId" asp-route-currentPage="@i">@i</a>
                                </li>
                            }
                        }
                        <li class="page-item">
                            <a class="page-link" asp-route-selectedCategoryId="@ViewBag.PostCategoryName.Id" asp-route-postId="@Model.postId" asp-route-currentPage="@Model.NextPage">Sonraki</a>
                        </li>
                    </ul>


                </nav>
            </div>

        </div>
        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        if (Model.Comments != null)
        {
            @foreach (var item in Model.Comments)
            {
                <div class="row border m-4 p-2 col-12">
                    <div><p>@item.Text</p></div>
                    <div class="col-12 row">
                        <div class="col-6">

                            <small> Yorum tarihi:  @item.CommentDate</small>

                        </div>
                        <div class="col-3">

                            <small> Yorum sahibi:  @item.UserName</small>

                        </div>

                        <div class="col-3">

                            <a class="btn btn-light d-flex justify-content-between align-items-center" asp-controller="BlockedUser" asp-action="AddBlockedUser" asp-route-blockedUserId="@item.UserId"><h6> <small>Kullanıcıyı Engelle</small></h6></a>

                        </div>


                    </div>



                </div>
            }
        }

    }

    <div class="col-12">
        <nav aria-label="Page navigation ">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" asp-route-selectedCategoryId="@ViewBag.PostCategoryName.Id" asp-route-postId="@Model.postId" asp-route-currentPage="@Model.PreviousPage">Önceki</a>
                </li>
                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    if (i == Model.CurrentPage)
                    {
                        <li class="page-item active">
                            <label class="page-link">@i</label>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link" asp-route-selectedCategoryId="@ViewBag.PostCategoryName.Id" asp-route-postId="@Model.postId" asp-route-currentPage="@i">@i</a>
                        </li>
                    }
                }
                <li class="page-item">
                    <a class="page-link" asp-route-selectedCategoryId="@ViewBag.PostCategoryName.Id" asp-route-postId="@Model.postId" asp-route-currentPage="@Model.NextPage">Sonraki</a>
                </li>
            </ul>


        </nav>
    </div>

</div>
<div class="col-md-1"></div>